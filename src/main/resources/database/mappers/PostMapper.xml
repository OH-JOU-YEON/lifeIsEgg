<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lifeEgg.dao.PostDAO">
	
<insert id="create">
insert into post (user_name) values (#{userName})
</insert>

<select id="read" resultType="UserDTO">
select * from user where id = #{userId}
</select>

<update id="update">
update post set user_name=#{userName}, age=#{age} where id = #{userId}
</update>

<delete id="delete"> 
delete from Post where uuid = #{uuid} 
</delete>


</mapper>