<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lifeEgg.dao.CheerDAO">
	
<insert id="create">
insert into post (content, user_id, parent_id, uuid) values (#{content}, #{user_id},
						#{parent_id}, #{uuid})
</insert>

<select id="read" resultType="CheerDTO">
select * from user where id = #{userId}
</select>

<select id="readByUuid" resultType="CheerDTO">
select * from user where uuid = #{uuid}
</select>


<delete id="delete"> 
delete from Post where id = #{id} 
</delete>


</mapper>